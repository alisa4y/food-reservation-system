<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <!-- Bootstrap RTL CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css"
    />
    <!-- Material Icons -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Persian Datepicker -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/persian-datepicker@1.2.0/dist/css/persian-datepicker.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="d-flex flex-column min-vh-100">
    <div class="container-fluid">
      <div class="row">
        <!-- Right Sidebar -->
        <div class="col-md-2 bg-dark sidebar">
          <div
            class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100"
          >
            <a
              href="/admin"
              class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none"
            >
              <img
                src="/images/logo.jpg"
                alt="Logo"
                class="img-fluid"
                style="max-height: 60px"
              />
            </a>
            <span class="fs-5 d-none d-sm-inline">پنل مدیریت</span>
            <hr class="w-100" />
            <ul
              class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
              id="menu"
            >
              <li class="nav-item w-100">
                <a href="/admin" class="nav-link align-middle px-0 text-white">
                  <i class="fs-4 fas fa-tachometer-alt"></i>
                  <span class="ms-1 d-none d-sm-inline">داشبورد</span>
                </a>
              </li>
              <li class="nav-item w-100">
                <a
                  href="/admin/employees"
                  class="nav-link px-0 align-middle text-white"
                >
                  <i class="fs-4 fas fa-users"></i>
                  <span class="ms-1 d-none d-sm-inline">مدیریت کارمندان</span>
                </a>
              </li>
              <li class="nav-item w-100">
                <a
                  href="/admin/reservations"
                  class="nav-link px-0 align-middle text-white"
                >
                  <i class="fs-4 fas fa-calendar-alt"></i>
                  <span class="ms-1 d-none d-sm-inline">مدیریت رزروها</span>
                </a>
              </li>
              <li class="nav-item w-100">
                <a
                  href="/admin/reports"
                  class="nav-link px-0 align-middle text-white"
                >
                  <i class="fs-4 fas fa-chart-bar"></i>
                  <span class="ms-1 d-none d-sm-inline">گزارش‌ها</span>
                </a>
              </li>
              <li class="nav-item w-100">
                <a
                  href="/scanner"
                  target="_blank"
                  class="nav-link px-0 align-middle text-white"
                >
                  <i class="fs-4 fas fa-barcode"></i>
                  <span class="ms-1 d-none d-sm-inline">صفحه اسکنر</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 ms-sm-auto px-md-4">
          <main class="pb-5"><%- body %></main>
        </div>
      </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
      <div class="container text-center">
        <span class="text-muted">سیستم مدیریت رزرو غذا &copy; ۱۴۰۴</span>
      </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Persian Date -->
    <script src="https://unpkg.com/persian-date@1.1.0/dist/persian-date.min.js"></script>
    <!-- Persian Datepicker -->
    <script src="https://unpkg.com/persian-datepicker@1.2.0/dist/js/persian-datepicker.min.js"></script>
    <!-- Material Design Components -->
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
  </body>
</html>
